{
  "openapi": "3.0.0",
  "info": {
    "title": "VoxTranslate â€” Real-Time AI Audio Translator",
    "version": "1.0.0",
    "description": "VoxTranslate is a full-stack, production-grade real-time audio translation application. Users can record their voice and receive instant translations into 70+ languages powered by OpenAI's/GroqAI Whisper (speech-to-text) and GPT-4 (translation) APIs.",
    "termsOfService": "https://swagger.io/terms/",
    "license": {
