    },
    "contact": {
      "name": "VoxTranslate",
      "url": "https://VoxTranslate.com",
      "email": "info@email.com"
    }
  },

  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication Endpoints"
    },
    {
      "name": "User",
      "description": "User Endpoints All require authentication ðŸ”’"
    },
    {
      "name": "Translation",
      "description": "Translation Endpoints All require authentication ðŸ”’"
    }
  ],
  "externalDocs": {
    "description": "Find out more about VoxTranslate",
    "url": "https://VoxTranslate.com/about"
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user account.",
        "description": "Register a new user account.",
        "operationId": "auth-register",
        "requestBody": {
          "description": "Create a new user",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Sets accessToken and refreshToken HttpOnly cookies.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InvalidError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/InvalidError"
                }
              }
            }
          },
          "409": {
            "description": "Validation exception",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorConflict"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorConflict"
                }
              }
            }
          },
          "404": {
            "description": "Not found error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },

    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Authenticate an existing user..",
        "description": "Log into system.",
        "operationId": "auth-login",
        "requestBody": {
          "description": "Log into the system",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Sets auth cookies. Returns user object.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InvalidError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/InvalidError"
                }
              }
            }
          },
          "401": {
            "description": "Invalid Credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              }
            }
          },
          "404": {
            "description": "Not found error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },

    "/auth/refresh": {
      "post": {
        "tags": ["Auth"],
        "summary": "Refresh the access token using the refresh token cookie.",
        "description": "Refresh the access token using the refresh token cookie.",
        "operationId": "auth-refresh",

        "responses": {
          "200": {
            "description": "Verifies refresh token exists in Redis,\nRevokes old refresh token (rotation)\nssues new access token + new refresh token \nSets new cookies",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/RegLoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Refresh token required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RefreshError"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/RefreshError"
                }
              }
            }
          },
          "404": {
            "description": "Not found error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },

    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log out and revoke refresh token.",
        "description": "Log out and revoke refresh token.",
        "operationId": "auth-logout",

        "responses": {
          "200": {
            "description": "Deletes refresh token from Redis, clears cookies.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogoutResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/LogoutResponse"
                }
              }
            }
          },

          "404": {
            "description": "Not found error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/404Error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Register": {
        "required": ["name", "email", "password"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePass123"
          }
        },
        "xml": {
          "name": "register"
        }
      },
      "RegLoginResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Registration / Login successful."
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "69998d186ddb18f2251a93e6"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "example": "john@example.com"
              },
              "role": {
                "type": "string",
                "example": "user"
              },
              "hasOpenApiKey": {
                "type": "boolean",
                "example": false
              },
              "hasGroqApiKey": {
                "type": "boolean",
                "example": false
              },
              "preferredSourceLanguage": {
                "type": "string",
                "example": "en"
              },
              "preferredTargetLanguage": {
                "type": "string",
                "example": "hi"
              },
              "translationCount": {
                "type": "integer",
                "example": 0
              },
              "lastLogin": {
                "type": "string",
                "example": "2026-02-21T10:46:49.155Z"
              },
              "createdAt": {
                "type": "string",
                "example": "2026-02-21T10:46:49.155Z"
              }
            }
          }
        },
        "xml": {
          "name": "##default"
        }
      },
      "InvalidError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Validation failed"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "example": "field"
                },
                "value": {
                  "type": "string",
                  "example": ""
                },
                "msg": {
                  "type": "string",
                  "example": "Name must be 2-50 characters"
                },
                "path": {
                  "type": "string",
                  "example": "name"
                },
                "location": {
                  "type": "string",
                  "example": "body"
                }
              }
            }
          }
        }
      },
      "ErrorConflict": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Data already Registered"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "emails is not defined"
          },
          "stack": {
            "type": "string",
            "example": "ReferenceError: emails is not defined"
          }
        }
      },
      "404Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Route not found"
          }
        }
      },
      "Login": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePass123"
          }
        },
        "xml": {
          "name": "login"
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Invalid email or password"
          }
        }
      },
      "LogoutResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Logged out successfully"
          }
        },
        "xml": {
          "name": "##default"
        }
      },
      "RefreshError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Refresh token required"
          },
          "code": {
            "type": "string",
            "example": "NO_REFRESH_TOKEN"
          }
        }
      }
    }
  }
}
